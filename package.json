{
    "name": "@odyzeo/form-item",
    "version": "2.5.0",
    "description": "Odyzeo form item component with Vue",
    "main": "dist/form-item.common.js",
    "keywords": [
        "odyzeo",
        "form",
        "input",
        "textarea",
        "vue"
    ],
    "author": "Odyzeo <tomas.zamba@odyzeo.com, peter.baricic@odyzeo.com, svetozar.sadecky@odyzeo.com> (https://odyzeo.com)",
    "publishConfig": {
        "access": "public"
    },
    "license": "ISC",
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "build-lib": "vue-cli-service build --target lib --name form-item ./src/index.js",
        "lint": "vue-cli-service lint"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/odyzeo/form-item.git"
    },
    "files": [
        "dist/*",
        "src/*",
        "public/*",
        "*.json",
        ".js"
    ],
    "devDependencies": {
        "@vue/cli-plugin-babel": "^4.5.12",
        "@vue/cli-plugin-eslint": "^4.5.12",
        "@vue/cli-service": "^4.5.12",
        "@vue/eslint-config-airbnb": "^5.3.0",
        "babel-eslint": "^10.1.0",
        "eslint": "^7.25.0",
        "eslint-plugin-vue": "^7.9.0",
        "less": "^4.1.1",
        "less-loader": "^7.3.0",
        "normalize.css": "^8.0.1",
        "vue": "^2.6.12",
        "vue-template-compiler": "^2.6.12"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "browser": true,
            "es6": true
        },
        "extends": [
            "plugin:vue/recommended",
            "@vue/airbnb"
        ],
        "rules": {
            "indent": 0,
            "vue/script-indent": [
                2,
                4
            ],
            "vue/html-indent": [
                2,
                4
            ],
            "vue/require-v-for-key": 1,
            "vue/html-self-closing": [
                2,
                {
                    "html": {
                        "normal": "never",
                        "component": "never"
                    }
                }
            ],
            "camelcase": 0,
            "import/extensions": [
                2,
                "ignorePackages",
                {
                    "js": "never",
                    "vue": "never"
                }
            ],
            "import/prefer-default-export": 0,
            "no-param-reassign": [
                2,
                {
                    "props": false
                }
            ]
        },
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "defaults",
        "> 0.5% in SK"
    ],
    "dependencies": {
        "lodash.debounce": "^4.0.8"
    }
}
